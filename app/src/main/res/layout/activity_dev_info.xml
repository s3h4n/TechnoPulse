<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/surface_full"
        android:orientation="vertical">

        <!-- Header with Back Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/surface"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">

            <!-- Back Button -->
            <Button
                android:id="@+id/back_button"
                style="?attr/materialIconButtonFilledTonalStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/surface"
                app:icon="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/display"
                android:text="About"
                android:textColor="@color/onSurface"
                android:textSize="20sp"
                android:textStyle="normal" />

        </RelativeLayout>

        <!-- Purple Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@color/primary"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="40dp">

            <!-- Profile Image Container -->
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="24dp">

                <!-- Profile Image -->
                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="center"
                    android:background="@drawable/sehan"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

        </LinearLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Developer Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:alpha="0.7"
                android:fontFamily="@font/inter"
                android:text="Developed by"
                android:textColor="@color/onSurface"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/display"
                android:text="W.M.S.R. Weerasekara"
                android:textColor="@color/onSurface"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:alpha="0.8"
                android:fontFamily="@font/inter"
                android:text="(2020T/00922)"
                android:textColor="@color/onSurface"
                android:textSize="16sp" />

            <!-- App Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:alpha="0.9"
                android:fontFamily="@font/inter"
                android:gravity="center"
                android:text="This app is for students and staff at the university. It helps them quickly see news about sports, studies, and campus events. The goal is to keep everyone up to date in an easy way."
                android:textColor="@color/onSurface"
                android:textSize="16sp" />

            <!-- Version Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:fontFamily="@font/inter"
                android:text="v 1.0.0"
                android:textColor="@color/onSurface"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
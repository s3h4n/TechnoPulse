<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@color/surface"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <!-- News Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="128dp"
            android:layout_height="90dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/news_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/article_placeholder" />

        </androidx.cardview.widget.CardView>

        <!-- News Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="8dp">

            <!-- Title -->
            <TextView
                android:id="@+id/news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:ellipsize="end"
                android:fontFamily="@font/inter"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:text="University Rises in Latest QS World Rankings..."
                android:textColor="@color/onSurface"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="University Rises in Latest QS World Rankings..." />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <!-- Category -->
                <TextView
                    android:id="@+id/news_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="Academic"
                    android:textAllCaps="true"
                    android:textColor="@color/primary"
                    android:textSize="11sp"
                    tools:text="Academic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:alpha=".5"
                    android:text="â€¢" />

                <!-- Date -->
                <TextView
                    android:id="@+id/news_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha=".7"
                    android:fontFamily="@font/inter"
                    android:text="Mar 15, 2025"
                    android:textColor="@color/onSurface"
                    android:textSize="12sp"
                    tools:text="Mar 15, 2025" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    tools:context=".NewsArticleActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Image Section -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <ImageView
                    android:id="@+id/header_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/academic_top100_ranking"
                    tools:src="@drawable/academic_top100_ranking" />


                <!-- Back Button -->
                <Button
                    android:id="@+id/back_button"
                    style="?attr/materialIconButtonFilledTonalStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:backgroundTint="@color/surface"
                    android:padding="16dp"
                    app:icon="@drawable/ic_back" />
            </FrameLayout>

            <!-- Article Content Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-24dp"
                android:background="@color/background"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Article Title -->
                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/display"
                    android:text="New Course on Artificial Intelligence Approved for Next Semester"
                    android:textColor="@color/onSurface"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    tools:text="New Course on Artificial Intelligence Approved for Next Semester" />

                <!-- Meta Information Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Category -->
                    <TextView
                        android:id="@+id/category_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Academic"
                        android:textAllCaps="true"
                        android:textColor="@color/primary"
                        android:textSize="13sp"
                        tools:text="Acadmic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:text="â€¢"
                        android:textColor="@color/onSurface" />

                    <TextView
                        android:id="@+id/date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mar 15, 2025"
                        android:textColor="@color/onSurface"
                        android:textSize="14sp"
                        tools:text="Mar 15, 2025" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="32dp">

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                </LinearLayout>

                <!-- Article Content -->
                <TextView
                    android:id="@+id/content_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:lineSpacingMultiplier="1.5"
                    android:text="The Faculty of Computing has confirmed the introduction of a new undergraduate course titled Foundations of Artificial Intelligence, set to commence in the upcoming semester. The course aims to provide students with a structured introduction to core AI concepts, covering machine learning, neural networks, natural language processing, and ethical considerations."
                    android:textColor="@color/onSurface"
                    android:textSize="16sp"
                    tools:text="Article content goes here..." />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>